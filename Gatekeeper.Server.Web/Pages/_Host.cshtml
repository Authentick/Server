@page "/"

@using StackExchange.Profiling

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, MiniProfiler.AspNetCore.Mvc

<!DOCTYPE html>
<html class="h-100">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <title>Gatekeeper</title>
    <base href="/" />
    <link href="css/main.css" rel="stylesheet" />
    <link href="Gatekeeper.Client.styles.css" rel="stylesheet" />
    <link rel="apple-touch-icon" sizes="180x180" href="/img/favicons/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/img/favicons/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/img/favicons/favicon-16x16.png">
    <link rel="manifest" href="/img/favicons/site.webmanifest">
    <link rel="mask-icon" href="/img/favicons/safari-pinned-tab.svg" color="#034f84">
    <link rel="shortcut icon" href="/img/favicons/favicon.ico">
    <meta name="apple-mobile-web-app-title" content="Gatekeeper">
    <meta name="application-name" content="Gatekeeper">
    <meta name="msapplication-TileColor" content="#ff0000">
    <meta name="msapplication-config" content="/img/favicons/browserconfig.xml">
    <meta name="theme-color" content="#034f84">
</head>

<body class="h-100">
    <div id="app" class="h-100">
        <span class="loader text-primary font-weight-bold text-lg">
            <span class="loading-circle loading-circle-1"></span>
            <span class="loading-circle loading-circle-2"></span>
            <span class="loading-circle loading-circle-3"></span>
            <span class="loading-circle loading-circle-4"></span>
        </span>
    </div>

    <div id="blazor-error-ui">
        An unhandled error has occurred.
        <a href="" class="reload">Reload</a>
        <a class="dismiss">ðŸ—™</a>
    </div>

    <mini-profiler 
        position="RenderPosition.BottomRight" 
        show-controls="true"
        start-hidden="true"
    />

    <script src="/js/main.js"></script>
    <script src="_framework/blazor.webassembly.js"></script>
</body>

</html>
