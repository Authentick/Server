@inherits MainLayout

<div class="sidebar d-flex">
    <div class="sidebar__first bg-primary text-secondary d-flex flex-column justify-content-between py-4">
        <div class="d-flex flex-column justify-content-center align-items-center">
            <img src="/img/logo.svg" />
            <div class="d-flex flex-column justify-content-center align-items-center w-100">
                <NavLink class="sidebar__icon d-flex justify-content-center flex-column align-items-center mt-5 w-100" href="apps" Match="NavLinkMatch.All">
                    <span class="material-icons md-icon-24">apps</span>
                    <span>Apps</span>
                </NavLink>
                <NavLink class="sidebar__icon d-flex justify-content-center flex-column align-items-center mt-4 w-100" href="security" Match="NavLinkMatch.All">
                    <span class="material-icons md-icon-24">security</span>
                    <span>Security</span>
                </NavLink>
                <NavLink class="sidebar__icon d-flex justify-content-center flex-column align-items-center mt-4 w-100" href="admin" Match="NavLinkMatch.All">
                    <span class="material-icons md-icon-24">settings</span>
                    <span>Admin</span>
                </NavLink>
            </div>
        </div>
        <div class="d-flex justify-content-center">
            <img src="img/unsplash/profile.jpg" class="avatar avatar__sm"> 
        </div>
    </div>
    <div class="sidebar__second d-flex flex-column text-black py-3">
        @Sidebar
    </div>
</div>
<div class="content">
    @Content
</div>

@code{ 
    #nullable enable
    
    [Parameter]
    public RenderFragment? Sidebar { get; set; }

    [Parameter]
    public RenderFragment? Content { get; set; }
}
